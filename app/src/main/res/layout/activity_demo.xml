<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".DemoActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set_Wish_Time"
        android:id="@+id/wishbt"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/abc_search_url_text_pressed"
        android:background="@color/link_text_material_dark"
        android:layout_toEndOf="@+id/cnNum" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set_Birth_Date"
        android:id="@+id/btbirthday"
        android:layout_alignBaseline="@+id/wishbt"
        android:layout_alignBottom="@+id/wishbt"
        android:layout_alignParentStart="true"
        android:background="@color/link_text_material_dark"
        android:textColor="@color/background_material_dark"
        android:layout_toStartOf="@+id/OKbt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STart"
        android:id="@+id/okbt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp"
        android:layout_alignEnd="@+id/btbirthday"
        android:background="@color/link_text_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stopbt"
        android:layout_alignBottom="@+id/okbt"
        android:layout_alignEnd="@+id/wishbt"
        android:layout_alignStart="@+id/wishbt"
        android:background="@color/link_text_material_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/contact"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="ContactNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smstext"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignEnd="@+id/wishbt"
        android:hint="EditSMS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/OKbt"
        android:background="@color/link_text_material_dark"
        android:layout_alignBaseline="@+id/stopbt"
        android:layout_alignBottom="@+id/stopbt"
        android:layout_alignParentStart="true" />
</RelativeLayout>
